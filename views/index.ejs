<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PubMatcher</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
        }
        h1 {
            text-align: center;
            margin-top: 20px;
            color: #333;
            font-size: 32px;
        }
        .description {
            text-align: center;
            font-size: 17px; 
            color: #555; 
            margin: 20px auto; 
            max-width: 80%; 
            line-height: 1.6; 
        }
        form {
            width: 100%;
            max-width: 600px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px 40px 20px 20px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        label {
            font-weight: bold;
            display: block;
            margin-bottom: 10px;
        }
        input[type="text"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
        }
        button {
            padding: 10px 20px;
            margin: 5px;
            background-color: #007BFF;
            border: none;
            border-radius: 4px;
            color: #fff;
            cursor: pointer;
            font-size: 16px;
        }
        button:hover {
            background-color: #0056b3;
        }
        table {
            border-collapse: collapse;
            width: 98%;
            margin-top: 20px;
            margin-left: 20px;
        }
        table, th, td {
            border: 2px solid #ddd;
        }
        th, td {
            padding: 8px 12px;
            text-align: center;
        }
        th {
            background-color: #f2f2f2;
        }
        tr:hover {
            background-color: #f5f5f5;
        }
        .popin {
            display: none;
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
            z-index: 1000;
        }
        .popin-content {
            width: 80%;
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
        }
        img.logo {
            display: block;
            margin: 30px auto 10px;
            max-width: 300px;
        }
        .export-button {
            display: block;
            margin: 20px auto;
            padding: 5px 10px;
            font-size: 14px;
            background-color: #ddd;
            color: #333;
            border: 1px solid #ccc;
            border-radius: 5px;
            text-align: center;
            cursor: pointer;
        }
        .export-button:hover {
            background-color: #ccc;
        }
        footer {
            text-align: center;
            line-height: calc(1em + 5px);
            padding: 20px 0;
            font-size: 12px;
            color: #666;
            margin-top: 40px;
        }
        .no-match {
            width: 20px;
            height: 20px;
        }
        #bug-report-button {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #f44336;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 5px;
        }
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);
            padding-top: 60px;
        }
        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 600px;
            border-radius: 10px;
        }
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }
        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
        .modal-content input, .modal-content textarea {
            width: 100%;
            padding: 10px;
            margin: 5px 0 15px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }
        .modal-content button {
            background-color: #4CAF50;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            width: 100%;
        }
        .modal-content button:hover {
            background-color: #45a049;
        }
        #loadingScreen {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 9999;
        }
        #loadingScreen > div {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    </style>
</head>
<body>

<!-- Écran de chargement -->
<div id="loadingScreen" style="display:none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 9999;">
    <div style="position:absolute; top:50%; left:50%; transform:translate(-50%, -50%);">
        <img src="/public/loading.gif" alt="Loading..." style="width: 100px; height: 100px;">
    </div>
</div>

    <img src="/public/Pubmatcher.png" alt="Pubmatcher" class="logo">
    <h1>PubMatcher</h1>
    <p class="description">A tool designed to facilitate the matching of multiple genes and phenotypes with relevant publications and data.</p>
    <div class="popin" id="seqOnePopin">
        <div class="popin-content">
            <h2>Enter your SeqOne Input</h2>
            <textarea id="seqOneInput" rows="10" style="width: 100%;" placeholder="Enter the gene listing available on SeqOne"></textarea>
            <button id="seqOneSubmit">Enter</button>
        </div>
    </div>
    <form action="/search" method="post" id="searchForm">
        <label for="genes">Genes:</label>
        <input type="text" name="genes" id="genesInput" placeholder="Enter one or more genes separated by commas">
        <label for="phenotypes">Phenotypes:</label>
        <input type="text" name="phenotypes" placeholder="Enter one or more phenotypes separated by commas">
        <button type="submit">Search</button>
    </form>
    <h1 style="font-size: 20px; margin-top: 30px; text-align: center;">Alternative gene input</h1>
    
<button id="textFreeInputBtn" style="display: block; margin: 1% auto; background-color: #7ecf7e;">Batch Input</button>
<button id="seqOneBtn" style="display: none; margin: 1% auto; background-color: #7ecf7e;">Input SeqOne</button>
   
    <% if (results && results.length > 0) {  %>
    <h2 style="text-align: center; margin-top: 40px;">Phenotypes :</h2>
    <p style="text-align: center; font-weight: bold; margin-bottom: 20px;"><%= phenotypes || 'No phenotype.' %></p>
    <h2 style="text-align: center; margin-top: 40px;">Results:</h2>
    
    <table id="resultsTable">
        <thead>
            <tr>
                <th>Gene</th>
                <th>Title of first publication</th>
                <th>Number of publications</th>
                <th>Function <i><b>(Uniprot)</b></i></th>
                <th>Mouse KO Phenotype <i>(IMPC)</i></th>
                <th>PanelApp (England/Australia)</th>
            </tr>
        </thead>
        <tbody>
            <% results.forEach(result => { %>
                <tr>
                    <td class="gene"><i><b><%= result.gene %></b></i></td>
                    <td><%= result.title %></td>
                    <td><a href="<%= result.url %>" target="_blank"><%= result.count %></a></td>
                    <td>
                        <% if (result.function === "No match") { %>
                            <img src="/public/cross.png" alt="No Match" class="no-match">
                        <% } else { %>
                            <%= result.function %>
                        <% } %>
                    </td>
                    <td>
                        <% if (result.mousePhenotype === "No match") { %>
                            <img src="/public/cross.png" alt="No Match" class="no-match">
                        <% } else { %>
                            <%= result.mousePhenotype %>
                        <% } %>
                    </td>
                    <td>
                        <a href="https://panelapp.genomicsengland.co.uk/panels/entities/<%= result.gene %>" target="_blank">ENG: <%= result.panelAppEnglandCount %></a> / 
                        <a href="https://panelapp.agha.umccr.org/panels/entities/<%= result.gene %>" target="_blank">AUS: <%= result.panelAppAustraliaCount %></a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
            </table>
            <form id="export-pdf-form" action="/export-pdf" method="post">
                <input type="hidden" name="results" value='<%= JSON.stringify(results) %>'>
                <input type="hidden" name="phenotypes" value='<%= phenotypes %>'>
                <button type="submit" class="export-button">Export to PDF</button>
            </form>
        <% } %>

<!-- Bouton Bug Report -->
    <button id="bug-report-button">Bug Report</button>

    <!-- Boîte de dialogue pour le rapport de bug -->
    <div id="bug-report-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Report a Bug</h2>
            <form id="bug-report-form">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
                <label for="message">Description:</label>
                <textarea id="message" name="message" rows="5" required></textarea>
                <button type="submit">Send</button>
            </form>
        </div>
    </div>

 <footer>
        Developed by Victor Marin, Bordeaux University Hospital<br>
        With the participation of Louis Lebreton and Victor Dumont
        <img src="/public/logoCHU.jpg" alt="LogoCHU" class="logo" style="margin:0.5% auto 10px; max-width: 8%;" >
    </footer>

<script>
    // JavaScript pour ouvrir et fermer la boîte de dialogue
    const modal = document.getElementById('bug-report-modal');
    const btn = document.getElementById('bug-report-button');
    const span = document.getElementsByClassName('close')[0];

    btn.onclick = function() {
        modal.style.display = 'block';
    }

    span.onclick = function() {
        modal.style.display = 'none';
    }

    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = 'none';
        }
    }

    // Envoi du formulaire de rapport de bug
    document.getElementById('bug-report-form').onsubmit = async function(event) {
        event.preventDefault();

        const name = document.getElementById('name').value;
        const message = document.getElementById('message').value;

        try {
            const response = await fetch('/reportbug', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ name, message })
            });

            if (response.ok) {
                alert('Bug report sent successfully');
                modal.style.display = 'none';
            } else {
                const errorText = await response.text();
                console.error('Failed to send bug report:', errorText);
                alert('Failed to send bug report');
            }
        } catch (error) {
            console.error('Network error:', error);
            alert('Network error');
        }
    }
</script>

<script>
    document.getElementById('searchForm').addEventListener('submit', function(event) {
        event.preventDefault();
        document.getElementById('loadingScreen').style.display = 'block';

        const genes = document.getElementById('genesInput').value;
        const phenotypes = document.querySelector('input[name="phenotypes"]').value;

        const requestURL = '/search';
        const requestOptions = {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ genes, phenotypes })
        };

        fetch(requestURL, requestOptions)
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            updateResults(data);
            document.getElementById('loadingScreen').style.display = 'none';
        })
        .catch(error => {
            console.error('Error:', error);
            document.getElementById('loadingScreen').style.display = 'none';
        });
    });

    function updateResults(data) {
        const resultsTable = document.getElementById('resultsTable');
        const tbody = resultsTable.querySelector('tbody');
        tbody.innerHTML = '';

        data.results.forEach(result => {
            const row = document.createElement('tr');
            row.innerHTML = `
                <td class="gene"><i><b>${result.gene}</b></i></td>
                <td>${result.title}</td>
                <td><a href="${result.url}" target="_blank">${result.count}</a></td>
                <td>${result.function || '<img src="/public/cross.png" alt="No Match" class="no-match">'}</td>
                <td>${result.mousePhenotype || '<img src="/public/cross.png" alt="No Match" class="no-match">'}</td>
                <td>ENG: ${result.panelAppEnglandCount} / AUS: ${result.panelAppAustraliaCount}</td>
            `;
            tbody.appendChild(row);
        });
    }
</script>
</body>
</html>
